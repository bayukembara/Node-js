<%- include("partials/header.ejs") %>
    <div class="hero is-link is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-8 is-offset-2">
                    <h3 class="title has-text-white">Login</h3>
                    <hr class="login-hr">
                    <p class="subtitle has-text-white">Please login to see our cool stuff!</p>
                </div>
                <div class="box">
                    <div class="box">
                        <img src="https://miro.medium.com/proxy/0*4fHRBbNhF_1jpdCM.jpeg">
                    </div>
                    <div class="title has-text-grey is-5">Please enter your email and password.</div>
                    <form>
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" type="email" placeholder="Email" autofocus="">
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" type="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-info is-large is-fullwidth">Login</button>
                            </div>
                        </div>

                        <h6 class="title is-6 has-text-black">OR</h6>

                        <div class="field">
                            <div class="control">
                                <a href="signup" class="button is-danger is-large is-fullwidth">SignUp</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs")%>